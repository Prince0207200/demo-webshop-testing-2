pipeline {
    agent any

    tools {
        jdk 'Default'    // or your actual configured JDK name
        maven 'Default'  // or your actual Maven installation name
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Prince0207200/demo-webshop-testing-2.git'
            }
        }

        stage('Build') {
            steps {
                echo '🔧 Compiling the code...'
                bat 'mvn clean compile'
            }
        }

        stage('Run Cross-Browser Tests') {
            steps {
                echo '🚀 Running TestNG in parallel on Chrome & Edge...'
                bat 'mvn test -Dsurefire.suiteXmlFiles=testng.xml'
            }
        }

        stage('Publish Reports') {
            steps {
                junit 'target/surefire-reports/*.xml'
            }
        }
    }

    post {
        always {
            echo '✅ Pipeline execution complete.'
        }
        failure {
            echo '❌ Build or tests failed.'
        }
    }
}
