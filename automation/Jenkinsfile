pipeline {
    agent any

tools {
    jdk 'Default'
    maven 'Default'
}


    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Prince0207200/demo-webshop-testing-2.git'
            }
        }

        stage('Build') {
            steps {
                echo 'ğŸ”§ Compiling the code...'
                sh 'mvn clean compile'
            }
        }

        stage('Run Cross-Browser Tests') {
            steps {
                echo 'ğŸš€ Running TestNG in parallel on Chrome & Edge...'
                sh 'mvn test -Dsurefire.suiteXmlFiles=testng.xml'
            }
        }

        stage('Publish Reports') {
            steps {
                junit 'target/surefire-reports/*.xml'
            }
        }
    }

    post {
        always {
            echo 'âœ… Pipeline execution complete.'
        }
        failure {
            echo 'âŒ Build or tests failed.'
        }
    }
}
